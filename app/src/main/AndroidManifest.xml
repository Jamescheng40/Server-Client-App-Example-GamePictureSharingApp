<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.new_application">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".BrowsePage"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DisplayMessageActivity" />
        <!-- theme can be customized in the style resources file -->
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".SignUpClass"
            android:theme="@style/Theme.signupclass" />
        <activity
            android:name=".SignUpClass2"
            android:theme="@style/Theme.signupclass" />
        <activity
            android:name=".signinorsignup"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.signupclass" />
        <activity
            android:name=".PictureView"
            android:theme="@style/Theme.myApptheme"
            tools:targetApi="lollipop" />
        <activity
            android:name=".FixedWallpaperInterface"
            android:theme="@style/Theme.myApptheme"
            tools:targetApi="lollipop" />
        <activity
            android:name=".SearchPage"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".youAreNotLoggedIn"
            android:theme="@style/Theme.signupclass" />
        <activity android:name=".MyUploadPage"
            android:theme="@style/Theme.signupclass"
            ></activity>
    </application>

</manifest>